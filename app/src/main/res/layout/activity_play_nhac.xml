<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background_play_nhac"
    tools:context=".Activity.Activity_play_nhac">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_play_nhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpaper_play_nhac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingHorizontal="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="00:00"
                android:layout_weight="0.5"
                android:id="@+id/txt_time_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/seekbar_song"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_total_time_song"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="16sp"
                android:text="00:00"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tag="0"
                android:id="@+id/btn_ngaunhien"/>
            <ImageButton
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_preview"/>
            <ImageButton
                android:src="@drawable/iconpause"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_play"/>
            <ImageButton
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_next"/>
            <ImageButton
                android:tag="0"
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_repeat"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>