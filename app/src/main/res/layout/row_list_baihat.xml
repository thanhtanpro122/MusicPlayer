<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/txt_nhac_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="Ten Ca Khuc"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/txt_nhac_index"
            android:id="@+id/txt_play_nhac_ten_baihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:text="Ten Ca Si"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/txt_nhac_index"
            android:layout_below="@+id/txt_play_nhac_ten_baihat"
            android:id="@+id/txt_play_nhac_ten_casi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

